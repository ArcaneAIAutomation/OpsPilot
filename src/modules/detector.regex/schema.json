{
  "type": "object",
  "properties": {
    "rules": {
      "type": "array",
      "description": "Detection rules. Each rule is a regex pattern with metadata.",
      "items": {
        "type": "object",
        "required": ["id", "pattern", "severity", "title"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique rule identifier.",
            "minLength": 1
          },
          "pattern": {
            "type": "string",
            "description": "Regular expression pattern to match against log lines.",
            "minLength": 1
          },
          "flags": {
            "type": "string",
            "description": "Regex flags (e.g. 'i' for case-insensitive).",
            "default": "i"
          },
          "severity": {
            "type": "string",
            "enum": ["info", "warning", "critical"],
            "description": "Incident severity when this rule matches."
          },
          "title": {
            "type": "string",
            "description": "Human-readable title for the generated incident.",
            "minLength": 1
          },
          "description": {
            "type": "string",
            "description": "Optional description template. Use $0 for full match, $1-$9 for capture groups.",
            "default": "Pattern matched: $0"
          },
          "cooldownMs": {
            "type": "integer",
            "description": "Minimum time (ms) between incidents for this rule to avoid alert storms.",
            "minimum": 0,
            "default": 60000
          },
          "enabled": {
            "type": "boolean",
            "description": "Whether this rule is active.",
            "default": true
          }
        },
        "additionalProperties": false
      },
      "minItems": 0
    },
    "maxIncidentsPerMinute": {
      "type": "integer",
      "description": "Global rate limit for incidents emitted per minute.",
      "minimum": 1,
      "maximum": 1000,
      "default": 30
    }
  },
  "required": ["rules"],
  "additionalProperties": false
}
