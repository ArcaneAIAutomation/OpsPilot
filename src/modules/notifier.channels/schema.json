{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "channels": {
      "type": "array",
      "description": "Notification channels to enable.",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique channel identifier."
          },
          "type": {
            "type": "string",
            "enum": ["console", "webhook"],
            "description": "Channel type."
          },
          "events": {
            "type": "array",
            "description": "Event types this channel subscribes to.",
            "items": { "type": "string" },
            "minItems": 1
          },
          "minSeverity": {
            "type": "string",
            "enum": ["info", "warning", "critical"],
            "description": "Minimum severity to notify (for incident events)."
          },
          "webhookUrl": {
            "type": "string",
            "format": "uri",
            "description": "URL for webhook channels."
          },
          "webhookMethod": {
            "type": "string",
            "enum": ["POST", "PUT"],
            "default": "POST"
          },
          "webhookHeaders": {
            "type": "object",
            "description": "Additional HTTP headers for webhook requests.",
            "additionalProperties": { "type": "string" }
          },
          "enabled": {
            "type": "boolean",
            "default": true
          }
        },
        "required": ["id", "type", "events"],
        "additionalProperties": false
      },
      "minItems": 1
    },
    "rateLimitPerMinute": {
      "type": "integer",
      "minimum": 1,
      "default": 60,
      "description": "Maximum number of notifications per minute across all channels."
    }
  },
  "required": ["channels"],
  "additionalProperties": false
}
